<?xml version="1.0" encoding="UTF-8"?>

<meta:Type 
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:api="class:/spiralcraft/linkedin/api/"
  xmlns:vfsu="class:/spiralcraft/vfs/url/"
  xmlns:task="class:/spiralcraft/task/"
  xmlns:vfsf="class:/spiralcraft/vfs/functions/"
  xmlns:vfs="class:/spiralcraft/vfs/" 
  xmlns:jnet="class:/java/net/"
  >
  <fields>
    <meta:Field>
      <name>id</name>
      <type>
        <String.type/>
      </type>
    </meta:Field>
    <meta:Field>
      <name>firstName</name>
      <type>
        <String.type/>
      </type>
    </meta:Field>
    <meta:Field>
      <name>lastName</name>
      <type>
        <String.type/>
      </type>
    </meta:Field>
    <meta:Field>
      <name>pictureURL</name>
      <type>
        <URI.type/>
      </type>
    </meta:Field>
    <meta:Field>
      <name>emailAddress
      </name>
      
      <type><String.type/>
      </type>
    </meta:Field>
    <meta:CalculatedField>
      <name>positions
      </name>
      <type>
        <api:Position.list.type/>
      </type>
      <expression>[@api:Position].@findByPersonId(id)
      </expression>
    </meta:CalculatedField>
  </fields>
  
  <methods>
    <meta:TaskMethod>
      <name>findById</name>
      
      <static>true
      </static>
      
      <parameterTypes>
        <String.type/>
      </parameterTypes>
      
      <returnType>
        <api:Person.type/>
      </returnType>
      

          
    </meta:TaskMethod> 

    <meta:TaskMethod>
      <name>me</name>
      
      <static>true
      </static>
      
      <returnType>
        <api:Person.type/>
      </returnType>
               
    </meta:TaskMethod>

    <meta:Method>
      <name>copyPicture
      </name>
    
      <parameterTypes>
        <URI.type/>
        <String.type/>
      </parameterTypes>
    
      <returnType>
        <URI.type/>
      </returnType>
      
      <contextX>
        [#copyPicture] 
        { 
          container:=[@jnet:URI].("context://files/")
          ,prefix:="liUserPic" 
        }      
      </contextX>
    
      <x>
      
        [api:Person].pictureURL==null
          ?null
          : 
            [@vfsu:URLResource].([api:Person].pictureURL).message
            {
              [copyPicture].container.[*vfsf:Resolve].URI
                .relativize
                  ([@vfs:ResourceUtil].@addCopy
                    ([copyPicture].container
                      .[*vfsf:Resolve].asContainer()
                    ,.contentBody
                    ,[copyPicture].prefix+[api:Person].id+
                      (.metadata.getValue("Content-Type")
                        {.=="image/jpeg"
                          ?".jpg"
                          :.=="image/gif"
                          ?".gif"
                          :""
                        }
                      )
                    ).URI
                  )
      
            }      
      </x>
    
    </meta:Method>    

  </methods> 
</meta:Type>