<li:Call
  xmlns:li="class:/spiralcraft/linkedin/"
  xmlns:j="class:/java/lang/"
  xmlns:api="class:/spiralcraft/linkedin/api/"
  >
 
  <resultReflectorX>[@api:Person]
  </resultReflectorX>
  
  <pathX>"me?projection=(id,localizedFirstName,localizedLastName)"
  </pathX>
  
  <whenX>[li:Session].oauthId!=null
  </whenX>
  
  <debug>false
  </debug>
  
  <JSONStruct>[#li] {id:[@j:String], localizedFirstName:[@j:String], localizedLastName:[@j:String] }
  </JSONStruct>
  <resultX>[@api:Person].(id:=[li].id, firstName:=[li].localizedFirstName, lastName:=[li].localizedLastName)
  </resultX>
</li:Call>